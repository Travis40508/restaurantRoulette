<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_restaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.campbellapps.christiancampbell.restaurant.RestaurantActivity"
    android:background="#6F1D1B">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/burgermain"
        android:id="@+id/burger"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/tacomain"
        android:id="@+id/taco"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/chickenmain"
        android:id="@+id/chicken"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bbq"
        android:id="@+id/bbq"
        android:layout_alignParentStart="true"
        android:layout_below="@id/burger"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/chinese"
        android:id="@+id/chinese"
        android:layout_centerInParent="true"
        android:layout_below="@id/taco"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fish"
        android:id="@+id/fish"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/chicken"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/homecooking"
        android:id="@+id/home_cooking"
        android:layout_alignParentStart="true"
        android:layout_below="@id/bbq"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/italian"
        android:id="@+id/italian"
        android:layout_centerInParent="true"
        android:layout_below="@id/chinese"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/pizza"
        android:id="@+id/pizza"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fish"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/sandwich"
        android:id="@+id/sandwich"
        android:layout_alignParentStart="true"
        android:layout_below="@id/home_cooking"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/mexican"
        android:id="@+id/mexican"
        android:layout_centerInParent="true"
        android:layout_below="@id/italian"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/steak"
        android:id="@+id/steak"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/pizza"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/randommain"
        android:id="@+id/random"
        android:layout_centerInParent="true"
        android:layout_below="@id/mexican"

        />

</RelativeLayout>
