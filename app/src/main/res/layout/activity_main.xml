<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.campbellapps.christiancampbell.restaurant.MainActivity"
    android:background="#6F1D1B">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/magoffinbutton"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:id="@+id/magoffin_county" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/johnsonbutton"
        android:layout_centerInParent="true"
        android:layout_below="@id/magoffin_county"
        android:layout_marginTop="39dp"
        android:id="@+id/johnson_county" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/floydbutton"
        android:layout_centerInParent="true"
        android:layout_below="@id/johnson_county"
        android:layout_marginTop="39dp"
        android:id="@+id/floyd_county" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/real_pike_button"
        android:layout_centerInParent="true"
        android:layout_below="@id/floyd_county"
        android:layout_marginTop="39dp"
        android:id="@+id/pike_county" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/johnson_county"
        android:layout_alignParentStart="true" />
</RelativeLayout>
